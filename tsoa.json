{
  "entryFile": "index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "validate": true,
  "controllerPathGlobs": ["src/**/*controller.ts"],
  "spec": {
    "outputDirectory": ".",
    "specVersion": 3,
    "basePath": ".",
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "access_token",
        "in": "header",
        "description": "JWT token for authentication"
      }
    }
  },
  "routes": {
    "routesDir": "src",
    "middleware": "express",
    "authenticationModule": "./src/authentication/authentication.ts"
  }
}